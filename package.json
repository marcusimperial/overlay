{
  "name": "overlay",
  "version": "0.1.1",
  "main": "index.js",
  "author": "dare",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build-installer": "electron-builder",
    "deploy": "electron-builder"
  },
  "build": {
    "appId": "com.dare.overlay",
    "productName":"overlay",
    "publish": [{
      "provider": "generic",
      "url": "https://overlayy.as.r.appspot.com/"
    }],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icons/win/icon.ico"
    },
    "nsis": {
      "installerIcon": "assets/icons/win/icon.ico",
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "electron-updater": "^4.3.9",
    "mongodb": "^4.0.1",
    "node-fetch": "^2.6.1",
    "read-last-lines": "^1.8.0"
  },
  "devDependencies": {
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7"
  }
}
